<div class="login-box">
  <h2 class="login-title">
    Pixel Exhibition
  </h2>

  <div class="login-text-box">
    <p class="login-text">アカウントの編集</p>
  </div>

  <div class="login-content">
   <%= form_with model: current_user, local: true do |f|%>

    <div class="label">
      <%= f.label :image %>
    </div>
    <div class="file-upload-button">
      <%= f.file_field :image %>
    </div>
    
    <div class="label">
      <%= f.label :nickname %>
    </div>
    <%= f.text_field :nickname, placeholder:"nickname", autofocus: true%>

    <div class="label">
      <%= f.label :email%>
    </div>
    <%= f.email_field :email, placeholder:"Email", autofocus: true%>

    <%= f.submit "更新する", class: 'btn'%>

    <div class="root-btn-login">
      <%=link_to 'トップページに戻る', root_path, class:"root-login-btn"%>
    </div>
  <% end %>
  </div>
</div>