<div class="login-box">
  <h2 class="login-title">
    Pixel Exhibition
  </h2>

  <div class="login-text-box">
    <p class="login-text">アカウントの編集</p>
  </div>

  <div class="login-content">
   <%= form_with model: current_user,url:user_path,local: true do |f|%>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="label">
      <%= f.label :image, "画像を選択する", class:"login-image-btn"%>
    </div>
    <div class="file-upload-button">
      <%= f.file_field :image,class: "fileInput",style: "display:none;" %>
    </div>
    
    <div class="label">
      <%= f.label :nickname %>
    </div>
    <%= f.text_field :nickname, placeholder:"nickname", autofocus: true%>

    <div class="label">
      <%= f.label :email%>
    </div>
    <%= f.email_field :email, placeholder:"Email", autofocus: true%>

    <div class="label">
      <%= f.label :password%>
    </div>
    <%= f.password_field :password, placeholder:"Password", autofocus: true %>

    <div class="label">
      <%= f.label :password_confirmation %>
    </div>
    <%= f.password_field :password_confirmation, placeholder:"Password_confirmation", autofocus: true %> 

    <%= f.submit "更新する", class: 'btn' %>

    <div class="root-btn-login">
      <%=link_to 'マイページに戻る', root_path, class:"root-login-btn"%>
    </div>
  <% end %>
  </div>
</div>