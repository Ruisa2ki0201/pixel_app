<h1>詳細ページ</h1>
<%= image_tag @post.image, class:"test" %>

<%= link_to '削除', post_path(@post.id), method: :delete %>

<%= link_to '編集', edit_post_path(@post.id), method: :get %>

<h3>いいね件数: <%= @post.likes.count %></h3>
<% if user_signed_in? &&current_user.already_liked?(@post) %>
  <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
<% else %>
  <%= button_to 'いいね', post_likes_path(@post) %>
<% end %>

<div class="comment-box" data-post-id = <%= @post.id %>> 
  <%= form_with model: @comment, url:post_comments_path(@post.id) do |f| %>
    <%= f.text_field :content, class:"comment-text" %>
    <%= f.submit 'コメントする',class:"comment-btn" %>
  <% end %>

  <div id='comments'>
    <% @comments.reverse_each do |comment| %>
      <p>
        <%= comment.user.nickname %>
        <%= comment.content %>
        <%= link_to '削除', comment_path(comment.id), method: :delete %>
      </p>
    <% end %>
   </div>
</div>
<%= link_to '戻る', root_path %>