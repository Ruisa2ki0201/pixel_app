<%= render 'shared/header' %>

<div class="main">
  <div class="title-image">
    <img src="https://cdn.pixabay.com/photo/2017/02/08/17/24/butterfly-2049567_1280.jpg" class="image">
    <img src="https://cdn.pixabay.com/photo/2017/02/08/17/24/butterfly-2049567_1280.jpg" class="image2">
    <img src="https://cdn.pixabay.com/photo/2019/04/10/11/56/watercolour-4116932_1280.png" class="image3">
    
    <h2 class="title-name">
      Pixel Exhibition
    </h2>
  </div>
  
</div>

<% @posts.each do |post| %>
<%= link_to post_path(post.id) do %>
<%= image_tag post.image, class:"test"%>
<% end %>
<div class="name">
  <%= post.name %>
  <%= post.text %>
</div>
<%= post.likes.count %>
<% end %>
<%= link_to '投稿する', new_post_path %>