<%= render 'shared/header' %>

<div class="main">
  <div class="title-image">
    <img src="https://cdn.pixabay.com/photo/2016/08/11/23/48/italy-1587287_1280.jpg" class="image">
    <img src="https://cdn.pixabay.com/photo/2017/02/08/17/24/butterfly-2049567_1280.jpg" class="image2">
    <img src="https://cdn.pixabay.com/photo/2019/04/10/11/56/watercolour-4116932_1280.png" class="image3">
    
    <h2 class="title-name">
      Pixel Exhibition
    </h2>
  </div>

  <div class="over">
  </div>
  
  <div class="posts-content">
    <% @posts.each do |post| %>
    <div class="post-img-content">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.image, class:"post-img"%>
      <% end %>
      <div class="post-content">
        <div class="post-name">
          <%= post.name %>
        </div>

        <div class="post-like">
          <%= post.likes.count %>
        </div>

        <div class="post-comment">
          <%= post.comments.count %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="sab-content">
</div>

<% if user_signed_in? %>
  <%= link_to '投稿する', new_post_path, class:"btn-circle-border-double"%>
<% else %>
  <%= link_to '投稿する', new_user_registration_path, class:"btn-circle-border-double"%>
<% end %>

<%= render "shared/footer" %>