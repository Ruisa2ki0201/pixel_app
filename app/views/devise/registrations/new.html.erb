<div class="login-box">
  <h2 class="login-title">
    Pixel Exhibition
  </h2>

  <div class="login-text-box">
    <p class="login-text">新規登録</p>
  </div>

  <div class="login-content">
   <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
    
    <div class="label">
      <%= f.label :image, "画像を選択する", class:"login-image-btn"%>
    </div>
    <div class="file-upload-button">
      <%= f.file_field :image,class: "fileInput",style: "display:none;" %>
    </div>

    <div class="label">
      <%= f.label :nickname %>
    </div>
    <%= f.text_field :nickname, placeholder:"nickname", autofocus: true%>

    <div class="label">
      <%= f.label :email%>
    </div>
    <%= f.email_field :email, placeholder:"Email"%>

    <%if @sns_id.present? %>
      <%= hidden_field_tag :sns_auth, true %>
    <% else %> 
      <div class="label">
        <%= f.label :password%>
      </div>
      <%= f.password_field :password, placeholder:"Password", autocomplete: "off"%>
    
      <div class="label">
        <%= f.label :password_confirmation%>
      </div>
      <%= f.password_field :password_confirmation, placeholder:"Password_confirmation", autocomplete: "off"%>
    <% end %>

    <%= f.submit "新規登録", class: 'btn'%>

    <div class="root-btn-login">
      <%=link_to 'トップページに戻る', root_path, class:"root-login-btn"%>
    </div>
  <% end %>
  </div>
</div>